

programa ejercicio3
procesos 
  proceso juntarFlores (ES flores: numero)
  comenzar
    mientras HayFlorEnLaEsquina
      tomarFlor
  fin
  proceso juntarPapeles (ES papeles: numero)
  comenzar
    mientras HayPapelEnLaEsquina
      tomarPapel
  fin
  proceso depositarFlores (E flores: numero)
  comenzar
    repetir flores
      depositarFlor
  fin
  proceso depositarPapeles (E papeles: numero)
  comenzar
    repetir papeles
      depositarFlor
  fin
  proceso depositarJuntos (E flores: numero; E papeles: numero)
  comenzar
    depositarFlores (flores)
    depositarPapeles (papeles)
  fin
  proceso juntarJuntos (ES flores: numero; ES papeles: numero)
  comenzar
    juntarFlores (flores)
    juntarPapeles (papeles)
  fin
  proceso comparar (E flores: numero; E papeles: numero; ES contador: numero)
  comenzar
    si (papeles - flores = 1)
      contador:= contador+1
  fin
  proceso escalon (E medida: numero ES contador: numero)
  variables
    flores: numero
    papeles: numero
  comenzar
    flores:= 0
    papeles:= 0
    repetir medida
      juntarJuntos (flores, papeles)
      depositarJuntos (flores, papeles)
      mover
    derecha
    repetir medida
      mover
      juntarJuntos (flores, papeles)
      depositarJuntos (flores, papeles)
    comparar (flores, papeles, contador)
    repetir 3
      derecha
  fin
  proceso escalera (E escalones: numero)
  variables
    medida, contador: numero
  comenzar
    medida:=0
    repetir escalones
      contador:=0
      medida:= medida+2
      escalon (medida, contador) 
    Informar (contador)
  fin  
areas
  ciudad: AreaC (1,1,100,100)
robots
  robot tipo1
  variables
    escalones: numero
  comenzar
    escalones:= 4
    escalera (escalones)
  fin
variables
  robot1: tipo1
comenzar
  AsignarArea (robot1, ciudad)
  Iniciar (robot1, 1,1)
fin
